.input-group(class="{{className}}")
  input#rha-searchform-searchbox.form-control.with-close(
    ng-disabled='!securityService.loginStatus.isLoggedIn',
    placeholder='{{placeholder}}',
    ng-model='SearchBoxService.searchTerm',
    ng-keypress='onFilterKeyPress($event)',
    ng-change='SearchBoxService.onChange()')
  span.input-group-btn(ng-hide='hidebutton')
    a.close(ng-show="SearchBoxService.searchTerm && SearchBoxService.searchTerm!== ''", ng-click="clearSearch()")
      span.web-icon-close
    button#rha-searchform-searchbutton.btn.btn-app(
      ng-click='SearchBoxService.doSearch()',
      ng-disabled='!securityService.loginStatus.isLoggedIn || SearchBoxService.disableSearchButton',
      ng-class="{'btn-primary':!(!securityService.loginStatus.isLoggedIn || SearchBoxService.disableSearchButton)}")
      i.glyphicon.glyphicon-search
      | {{''}}
